/* 商品详情页 */
.goods-detail {
  padding-bottom: 100rpx;
}
/* 商品轮播图 start */
.goods-swiper {
  height: 700rpx;
}

.goods-swiper image {
  width: 100%;
  height: 100%;
}
/* 商品轮播图 end */

/* 商品价格 start */
.goods-price {
  margin-top: 20rpx;
  padding-left: 20rpx;
  font-size: 35rpx;
  color: #df0e0e;
}
/* 商品价格 end */

/* 商品名称 start */
.goods-name {
  display: flex;
}

.goods-name > view:nth-child(1) {
  width: 600rpx;
  padding-left: 8rpx;
  padding-right: 16rpx;
  font-size: 30rpx;
  line-height: 38rpx;
}

/* 收藏 */
.goods-name-collect {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  font-size: 24rpx;
  color: #666;
  text-align: center;
  border-left: 1px solid #ddd;
}

.goods-name-collect .iconfont {
  font-size: 42rpx;
  margin-bottom: 2rpx;
}

.goods-name-collect text {
  display: block;
  line-height: 1;
}
/* 商品名称 end */

/* 商品快递 start */
.goods-post {
  padding-left: 10rpx;
  color: #999;
  font-size: 22rpx;
}
/* 商品快递 end */

/* 商品介绍 start */
.goods-intro {
  margin-top: 20rpx;
}
/* 商品介绍 end */

/* 商品详情底部 start */
.goods-footer {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  background-color: white;
  line-height: 100rpx;
}
.goods-footer .btn {
  padding: 0 16rpx;
  vertical-align: middle;
  color: #777;
}

.goods-footer .icon {
  height: 40rpx;
}

.goods-footer .text {
  font-size: 26rpx;
}
.goods-footer .icon-gouwuchekong {
  font-size: 40rpx;
}

/* 加入购物车、立即购买 */
.goods-buy {
  display: flex;
  flex: 1;
  margin: 12rpx;
  border-radius: 40rpx;
  overflow: hidden;
}

.goods-buy view {
  flex: 1;
  text-align: center;
  line-height: 72rpx;
  color: #fff;
  font-size: 28rpx;
}

.goods-buy view:nth-child(1) {
  background-color: #ff0000;
}

.goods-buy view:nth-child(2) {
  background-color: #ffa200;
}

/* 商品详情底部 end */