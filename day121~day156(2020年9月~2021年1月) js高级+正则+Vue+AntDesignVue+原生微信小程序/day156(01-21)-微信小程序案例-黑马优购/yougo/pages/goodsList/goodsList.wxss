/* 商品列表页 */
/* 顶部搜索栏 start */
.top-search {
  height: 100rpx;
  background-color: #c00000;
  padding-top: 10rpx;
  box-sizing: border-box;
}

/* 顶部搜索栏 end */

/* 商品排序方式tabBar start */
.goods-tabbar {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
}

.goods-tabbar>view {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1px solid #ddd;
}

.goods-tabbar>view.active {
  color: #c00000;
  border-bottom-color: #c00000;
}

/* 商品排序方式tabBar end */

/* 商品列表 start */
.goods-scroll {
  height: calc(100vh - 180rpx);
}

.goods-li {
  display: flex;
  border-bottom: 1px solid #ddd;
}

.goods-pic {
  width: 260rpx;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
}

.goods-pic image {
  width: 220rpx;
  height: 180rpx;
  vertical-align: middle;
}

.goods-infos {
  flex: 1;
  padding-left: 20rpx;
}

/* 商品名 */
.goods-infos view:nth-child(1) {
  display: -webkit-box;
  margin-top: 25rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #000;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-infos view:nth-child(2) {
  margin-top: 34rpx;
  color: #c00000;
}
/* 商品列表 end */