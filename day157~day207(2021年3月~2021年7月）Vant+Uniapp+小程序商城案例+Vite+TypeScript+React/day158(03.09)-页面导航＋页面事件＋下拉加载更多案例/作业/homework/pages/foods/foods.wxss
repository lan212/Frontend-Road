/* 美食页 */

/* 美食列表 start */
.foods {
  padding: 0 10rpx;
  background-color: #f0f0f0;
}
.foods > view {
  display: flex;
  border-radius: 10rpx;
  box-shadow: 0px 0px 5px #eee;
  padding: 14rpx;
  margin-top: 10rpx;
  background-color: white;
}

.foods image {
  width: 250rpx;
  height: 250rpx;
}

.foods-infos {
  flex: 1;
  margin-left: 20rpx;
  /* padding-top: 10rpx; */
}

.foods-infos view {
  font-size: 24rpx;
  margin-top: 16rpx;
}

.foods-infos view:nth-child(1) {
  font-weight: 700;
  font-size: 30rpx;
}
/* 美食列表 end */

.no-more {
  text-align: center;
  padding: 10rpx 0;
}